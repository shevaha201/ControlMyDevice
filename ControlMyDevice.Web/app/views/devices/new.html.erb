<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="page-title">Add device</div>
	</div>
	<div class="col-md-2"></div>
</div>
<div class="row">
	<div class="content">
		<div id="addDevice">
			<%= form_for @device do |f| %>
				<% if @device.errors.any? %>
					<div>
						<h2>Form is invalid</h2>
						<ul>
							<% for message in @device.errors.full_messages %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, :class => "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :identifier %>
					<%= f.text_field :identifier, :class => "form-control" %>
				</div>
				<%= f.submit "add", :class => "btn btn-primary btn-block" %>
			<% end %>
		</div>
	</div>
</div>
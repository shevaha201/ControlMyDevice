<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="page-title">Requests</div>
	</div>
	<div class="col-md-2"></div>
</div>
<div class="row">
	<div class="content">
		<div id="requests">
			<% @requests.each do |request| %>
	            <div data-device-item data-device-id="<%= request.id %>">
	            	<div>
	            		Name: <%= request.device.name %>
	            	</div>
	            	<div>
	            		Identitifier: <%= request.device.identifier %>
	            	</div>
	            	<% if request.owner_type == 2 %>
	            		<div>
	            			<%= link_to "Accept", accept_device_path(request.id), :class => "btn btn-info" %>
	            			<%= link_to "Reject", reject_device_path(request.id), :class => "btn btn-info" %>
	            		</div>
	            	<% else %>
	            		<div>
	            			<%= link_to "Cancel", cancel_device_path(request.id), :class => "btn btn-info" %>
	            		</div>
	            	<% end %>
	            	<hr>
	            </div>
	    	<% end %> 
		</div>
	</div>
</div>

<script src="/javascripts/plugins/requests.js" type="text/javascript"></script>
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="page-title">Details</div>
	</div>
	<div class="col-md-2"></div>
</div>
<div class="row">
	<div class="content">
		<div id="deviceDetails">
			<div data-device-details>
	            <div data-device-id="<%= @device.id %>">
	            	<div>
	            		Name: <%= @device.name %>
	            	</div>
	            	<div>
	            		Identitifier: <%= @device.identifier %>
	            	</div>
	            	<h3>Commands:</h3>
	            	<div>
	            		<button data-command-button data-command-name="get-device-contacts" class="btn btn-info">Get contacts</button>
	            		<button data-command-button data-command-name="get-device-call-history" class="btn btn-info">Get call history</button>
	            		<button data-command-button data-command-name="get-device-location" class="btn btn-info">Get location</button>
	            		<button data-command-button data-command-name="take-photo" class="btn btn-info">Take photo</button>
	            		<button data-command-button data-command-name="record-video" class="btn btn-info">Record video</button>
	            	</div>
	            	<div id="commandResult"><noscript>

  </noscript></div>
	            </div>	
	        </div>	
		</div>
	</div>
</div>

<script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false"></script>
<script src="/javascripts/plugins/deviceDetails.js" type="text/javascript"></script>